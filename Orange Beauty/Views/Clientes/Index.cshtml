@model IEnumerable<Orange_Beauty.Models.Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
}
<br />

<a type="button" class="btn btn-primary" href="~/Colaborador/Index">Voltar</a>

<br />
<br />
<h1 class="text-center">Lista de Clientes</h1>
<br />
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeCli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailCli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelefoneCli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPFCli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogradouroFunc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComplementoFunc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CEPFunc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CidadeFunc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoFunc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DtCadastroFunc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailCli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefoneCli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPFCli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LogradouroFunc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComplementoFunc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CEPFunc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CidadeFunc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoFunc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DtCadastroFunc)
            </td>
                <td>
                    <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ClienteID">Editar</a>
                    <a type="button" class="btn btn-info" asp-action="Details" asp-route-id="@item.ClienteID">Detalhes</a>
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ClienteID">Apagar</a>
                </td>
            </tr>
}
    </tbody>
</table>
