@model IEnumerable<Orange_Beauty.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}
<br />

<a type="button" class="btn btn-primary" href="~/Administrador/Index">Voltar</a>

<br />
<br />
<h1 class="text-center">Lista de Categorias</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeCategoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCategoria)
            </td>
                <td>
                    <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CategoriaID">Editar</a>
                    <a type="button" class="btn btn-info" asp-action="Details" asp-route-id="@item.CategoriaID">Detalhes</a>
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CategoriaID">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
