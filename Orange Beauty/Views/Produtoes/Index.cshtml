@model IEnumerable<Orange_Beauty.Models.Produto>

@{
    ViewData["Title"] = "Index";
}
<br />

<a type="button" class="btn btn-primary" href="~/Administrador/Index">Voltar</a>

<br />
<br />
<h1 class="text-center">Lista de Produtos</h1>
<br />
<br />

<!--<p>
    <a asp-action="Create">Create New</a>
</p>-->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeProd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoProd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoProd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstoqueProd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeProd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoriaID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecoProd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescricaoProd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstoqueProd)
                </td>
                <td>
                    <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ProdutoID">Editar</a>
                    <!--                <a asp-action="Edit" asp-route-id="@item.ProdutoID">Edit</a> |
                    -->
                    <a type="button" class="btn btn-info" asp-action="Details" asp-route-id="@item.ProdutoID">Detalhes</a>
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProdutoID">Apagar</a>

                </td>
            </tr>
        }
    </tbody>
</table>
