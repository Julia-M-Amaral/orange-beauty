@model Orange_Beauty.Models.Venda

@{
    ViewData["Title"] = "Cadastrar Venda";
}


<br />

<a type="button" class="btn btn-primary" href="~/Colaborador/Index">Voltar</a>

<br />
<br />

<h4>Nova Venda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FuncionarioID" class="control-label"></label>
                <input asp-for="FuncionarioID" class="form-control" />
                <span asp-validation-for="FuncionarioID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoID" class="control-label"></label>
                <input asp-for="ProdutoID" class="form-control" />
                <span asp-validation-for="ProdutoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteID" class="control-label"></label>
                <input asp-for="ClienteID" class="form-control" />
                <span asp-validation-for="ClienteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataVenda" class="control-label"></label>
                <input asp-for="DataVenda" class="form-control" />
                <span asp-validation-for="DataVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoProd" class="control-label"></label>
                <input asp-for="PrecoProd" class="form-control" />
                <span asp-validation-for="PrecoProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescricaoProd" class="control-label"></label>
                <input asp-for="DescricaoProd" class="form-control" />
                <span asp-validation-for="DescricaoProd" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
